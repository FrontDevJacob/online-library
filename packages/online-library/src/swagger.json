{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Online Library",
    "description": "API for Online Library"
  },
  "host": "localhost:3001",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "token": {
      "in": "cookie",
      "name": "token",
      "type": "apiKey",
      "description": "Auth token (jwt) generated with /login or /loginWithFacebook. Expires in 24h"
    }
  },
  "paths": {
    "/api/user/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "   ✅ Checks if user already exist <br />   ✅ Generates an <b>activation token</b> <br />   ✅ Sends link with the <b>token</b> to allow user activate his account <br />   ",
        "parameters": [
          {
            "name": "name",
            "in": "body",
            "description": "User name",
            "required": true,
            "schema": {
              "$ref": "#/definitions/name"
            }
          },
          {
            "name": "email",
            "in": "body",
            "description": "User email",
            "required": true,
            "schema": {
              "$ref": "#/definitions/email"
            }
          },
          {
            "name": "password",
            "in": "body",
            "description": "User password. It gets hashed",
            "required": true,
            "schema": {
              "$ref": "#/definitions/password"
            }
          },
          {
            "name": "repeatedPassword",
            "in": "body",
            "description": "User password. It is required just for the sake of validation",
            "required": true,
            "schema": {
              "$ref": "#/definitions/password"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Activate account by clicking the link that has been sent to you"
          },
          "409": {
            "description": "Email address already taken"
          },
          "502": {
            "description": "There was a problem sending the activation link"
          }
        }
      }
    },
    "/api/user/auth/activateAccount": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "   ✅ Check if user already activated his account <br />   ✅ Toggles account as activated if it's not alread <br />   ",
        "parameters": [
          {
            "name": "activationToken",
            "in": "body",
            "description": "Account activation token. Expires in 24h",
            "required": true,
            "schema": {
              "$ref": "#/definitions/jwt"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Account activated, you can login now"
          },
          "403": {
            "description": "Account already activated"
          },
          "409": {
            "description": "No authentication associated with this link"
          }
        }
      }
    },
    "/api/user/auth/resendActivationToken": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "   ✅ Ensures user with provided email address exists <br />   ✅ Rejects resending activation token if account is already activate <br />   ✅ Sends new activation token to the use <br />   ",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "description": "User email",
            "required": true,
            "schema": {
              "$ref": "#/definitions/email"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Link with new activation token has been sent"
          },
          "403": {
            "description": "Account already activated"
          },
          "404": {
            "description": "Provided email address is invalid"
          },
          "502": {
            "description": "There was a problem sending the activation link"
          }
        }
      }
    },
    "/api/user/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "   ✅ Checks given email and password <br />   ✅ Check if account is activated <br />   ✅ Sends auth token, that expires in 24h, if credentials are ok<br />   ",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "description": "User email",
            "required": true,
            "schema": {
              "$ref": "#/definitions/email"
            }
          },
          {
            "name": "password",
            "in": "body",
            "description": "User password",
            "required": true,
            "schema": {
              "$ref": "#/definitions/password"
            }
          }
        ],
        "responses": {
          "401": {
            "description": "The given credentials are wrong"
          },
          "403": {
            "description": "Account not activated"
          }
        }
      }
    },
    "/api/user/auth/loginWithFacebook": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "   ✅ Verifies <b>access token</b> provided by facebook auth <br />   ✅ Sends <b>auth token</b>, that expires in 24h, for either already existing user or newly created one <br />   ",
        "parameters": [
          {
            "name": "name",
            "in": "body",
            "description": "User name provided by FB",
            "required": true,
            "schema": {
              "$ref": "#/definitions/name"
            }
          },
          {
            "name": "email",
            "in": "body",
            "description": "User email provided by FB",
            "required": true,
            "schema": {
              "$ref": "#/definitions/email"
            }
          },
          {
            "name": "access_token",
            "in": "body",
            "description": "Access token provided by FB",
            "required": true,
            "schema": {
              "$ref": "#/definitions/access_token"
            }
          }
        ],
        "responses": {
          "400": {
            "description": "There was an unexpected problem with FB authentication"
          }
        }
      }
    },
    "/api/user/auth/recoverPassword": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "   ✅ Checks if any user belongs to provided email address <br />   ✅ Makes sure that user account is activated <br />   ✅ Generates <b>password token</b> to authorize changing password in the next step (password form) <br />   ",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "description": "User email",
            "required": true,
            "schema": {
              "$ref": "#/definitions/email"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Link to reset the password has been sent"
          },
          "404": {
            "description": "An incorrect email address was provided"
          },
          "409": {
            "description": "Account must be firstly activated"
          },
          "502": {
            "description": "There was a problem sending the link allowing resetting password"
          }
        }
      }
    },
    "/api/user/auth/checkPasswordToken": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "   ✅ Checks password token generated by <b>/api/user/auth/recoverPassword</b> <br />   ✅ Checks if there is a user with email address as kept in password token <br />   ",
        "parameters": [
          {
            "name": "passwordToken",
            "in": "body",
            "description": "Password token",
            "required": true,
            "schema": {
              "$ref": "#/definitions/jwt"
            }
          }
        ],
        "responses": {
          "400": {
            "description": "Link to reset the password is invalid"
          }
        }
      }
    },
    "/api/user/auth/changePassword": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "   ✅ Changes user password <br />   ",
        "parameters": [
          {
            "name": "password",
            "in": "body",
            "description": "New user password",
            "required": true,
            "schema": {
              "$ref": "#/definitions/password"
            }
          },
          {
            "name": "passwordToken",
            "in": "body",
            "description": "Password token",
            "required": true,
            "schema": {
              "$ref": "#/definitions/jwt"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Password has been changed"
          },
          "400": {
            "description": "Link to reset the password is invalid"
          }
        }
      }
    },
    "/api/user/books/getSuggestions": {
      "post": {
        "tags": [
          "Books"
        ],
        "description": "   ✅ Suggest books by searched author or title <br />   ",
        "parameters": [
          {
            "name": "title",
            "in": "body",
            "description": "Title to search for",
            "required": false,
            "schema": {
              "$ref": "#/definitions/plain"
            }
          },
          {
            "name": "author",
            "in": "body",
            "description": "Author to search for",
            "required": false,
            "schema": {
              "$ref": "#/definitions/plain"
            }
          },
          {
            "name": "withProfile",
            "in": "body",
            "description": "Flag that decides if suggest global books or books of certain user",
            "required": true,
            "schema": {
              "$ref": "#/definitions/boolean"
            }
          }
        ],
        "responses": {},
        "security": [
          {
            "token": []
          }
        ]
      }
    },
    "/api/user/cart/purchaseBooksWithStripe": {
      "post": {
        "tags": [
          "Cart"
        ],
        "description": "   ✅ Makes sure that user does not pay for already purchased books <br />   ✅ Processes stripe payment with credit card <br />   ✅ Assigns purchased books to the user <br />   ",
        "parameters": [
          {
            "name": "paymentId",
            "in": "body",
            "description": "Payment id created with stripe package on frontend",
            "required": true,
            "schema": {
              "$ref": "#/definitions/stripePaymentId"
            }
          },
          {
            "name": "products",
            "in": "body",
            "description": "Array of book ids to purchase",
            "required": true,
            "schema": {
              "$ref": "#/definitions/products"
            }
          }
        ],
        "responses": {
          "402": {
            "description": "Payment has failed"
          },
          "409": {
            "description": "You have already purchased selected books before"
          }
        },
        "security": [
          {
            "token": []
          }
        ]
      }
    },
    "/api/user/cart/createPayPalPayment": {
      "post": {
        "tags": [
          "Cart"
        ],
        "description": "   ✅ Makes sure that user does not pay for already purchased books <br />   ✅ Prepares paypal payment details <br />   ✅ Redirects user to paypal checkout <br />   ",
        "parameters": [
          {
            "name": "products",
            "in": "body",
            "description": "Array of book ids to purchase",
            "required": true,
            "schema": {
              "$ref": "#/definitions/products"
            }
          }
        ],
        "responses": {
          "402": {
            "description": "There was a problem preparing the payment, try again"
          },
          "409": {
            "description": "You have already purchased selected books before"
          }
        },
        "security": [
          {
            "token": []
          }
        ]
      }
    },
    "/api/user/cart/executePayPalPayment": {
      "post": {
        "tags": [
          "Cart"
        ],
        "description": "   ✅ Checks if user booked paymeny with certain id <br />   ✅ Checks if payment is still in progress <br />   ✅ Finalizes paypal payment and updates its status <br />   ✅ Assigns purchased books to the user <br />   ",
        "parameters": [
          {
            "name": "paymentId",
            "in": "body",
            "description": "Payment id generated after submitting paypal checkout",
            "required": true,
            "schema": {
              "$ref": "#/definitions/paypalPaymentId"
            }
          },
          {
            "name": "paypalPayerID",
            "in": "body",
            "description": "Payer id generated after submitting paypal checkout",
            "required": true,
            "schema": {
              "$ref": "#/definitions/paypalPayerID"
            }
          }
        ],
        "responses": {
          "402": {
            "description": "Payment has failed"
          },
          "404": {
            "description": "Bad payment id"
          },
          "409": {
            "description": "The order has been already approved"
          }
        },
        "security": [
          {
            "token": []
          }
        ]
      }
    },
    "/api/user/chat/getMessages": {
      "post": {
        "tags": [
          "Chat"
        ],
        "description": "",
        "parameters": [],
        "responses": {}
      }
    },
    "/api/user/chat/sendMessage": {
      "post": {
        "tags": [
          "Chat"
        ],
        "description": "",
        "parameters": [],
        "responses": {}
      }
    },
    "/api/user/chat/sendFile": {
      "post": {
        "tags": [
          "Chat"
        ],
        "description": "",
        "parameters": [],
        "responses": {}
      }
    },
    "/api/user/chat/subscribePushNotifications": {
      "post": {
        "tags": [
          "Chat"
        ],
        "description": "",
        "parameters": [],
        "responses": {}
      }
    },
    "/api/user/chat/getMessagesInfo": {
      "get": {
        "tags": [
          "Chat"
        ],
        "description": "",
        "parameters": [],
        "responses": {}
      }
    },
    "/api/user/global/checkToken": {
      "get": {
        "tags": [
          "Global"
        ],
        "description": "   ✅ Checks existance of <b>auth token</b> in cookies and validates it <br />   ✅ Returns proper role to the end user <br />   ",
        "parameters": [
          {
            "name": "token",
            "in": "cookies",
            "description": "Auth token. Expires in 24h",
            "required": false,
            "schema": {
              "$ref": "#/definitions/jwt"
            }
          }
        ],
        "responses": {}
      }
    },
    "/api/user/global/logout": {
      "get": {
        "tags": [
          "Global"
        ],
        "description": "   ✅ Logs user out <br />   ✅ Removes auth token from cookies <br />   ",
        "parameters": [
          {
            "name": "token",
            "in": "cookies",
            "description": "Auth token. Expires in 24h",
            "required": false,
            "schema": {
              "$ref": "#/definitions/jwt"
            }
          }
        ],
        "responses": {}
      }
    }
  },
  "definitions": {
    "name": {
      "type": "string",
      "example": "John"
    },
    "email": {
      "type": "string",
      "example": "john@example.com"
    },
    "password": {
      "type": "string",
      "example": "Sp2mc$10#F"
    },
    "jwt": {
      "type": "string",
      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
    },
    "access_token": {
      "type": "string",
      "example": "EAAG6VehVAPMBAK30w7QenD65zUARr9d4P3yQf44X5anasd6QnjtEtXH2c7TG234fsBMchb4Pe"
    },
    "boolean": {
      "type": "string",
      "example": "true"
    },
    "plain": {
      "type": "string",
      "example": "plain text"
    },
    "stripePaymentId": {
      "type": "string",
      "example": "pm_1LeJuTCA0Hw88eOYpY9kEDWK"
    },
    "paypalPaymentId": {
      "type": "string",
      "example": "PAYID-MMKLWRQ82689537V0194325L"
    },
    "paypalPayerID": {
      "type": "string",
      "example": "KVYVDZAMZGRRA"
    },
    "products": {
      "type": "string",
      "example": "[1,5,9,11]"
    }
  }
}