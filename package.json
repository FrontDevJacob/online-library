{
   "name": "@online-library/root",
   "private": true,
   "packageManager": "yarn@1.22.19",
   "engines": {
      "node": "16.18.0"
   },
   "scripts": {
      "dev": "turbo run dev",
      "lib:dev": "turbo run dev --filter=./@online-library/*",
      "lint": "turbo run lint",
      "test": "turbo run test",
      "build": "turbo run build",
      "postbuild": "yarn lib",
      "lib": "turbo run lib:build",
      "android": "yarn workspace @online-library/native android",
      "metro": "yarn workspace @online-library/native metro",
      "server": "yarn workspace @online-library/server dev",
      "docs": "turbo run docs --filter=./apps/server",
      "codegen": "graphql-codegen",
      "postinstall": "yarn lib",
      "prepare": "husky install"
   },
   "workspaces": [
      "@online-library/*",
      "apps/*"
   ],
   "devDependencies": {
      "husky": "^8.0.1",
      "prettier": "^2.7.1",
      "typescript": "^4.8.3",
      "eslint": "^8.14.0",
      "turbo": "^1.4.6",
      "postcss-scss": "^4.0.4",
      "stylelint": "^14.11.0",
      "@stylelint/postcss-css-in-js": "^0.38.0",
      "@trivago/prettier-plugin-sort-imports": "^3.3.0",
      "stylelint-config-styled-components": "^0.1.1",
      "stylelint-processor-styled-components": "^1.10.0",
      "@graphql-codegen/add": "^3.2.1",
      "@graphql-codegen/cli": "^2.12.0",
      "@graphql-codegen/typescript": "^2.7.3",
      "@graphql-codegen/typescript-operations": "^2.5.3",
      "@graphql-codegen/typescript-react-apollo": "^3.3.3",
      "@graphql-codegen/typescript-resolvers": "^2.7.3"
   }
}
