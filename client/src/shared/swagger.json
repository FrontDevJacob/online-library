  "paths": {
    "/api/user/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "  ✅ Checks if user already exists <br />  ✅ Generates an <b>activation token</b> <br />  ✅ Sends link with the <b>token</b> to allow user activate his account",
        "parameters": [
          {
            "name": "name",
            "in": "body",
            "description": "User name",
            "required": true,
            "schema": {
              "$ref": "#/definitions/name"
            }
          },
          {
            "name": "email",
            "in": "body",
            "description": "User email",
            "required": true,
            "schema": {
              "$ref": "#/definitions/email"
            }
          },
          {
            "name": "password",
            "in": "body",
            "description": "User password. It gets hashed",
            "required": true,
            "schema": {
              "$ref": "#/definitions/password"
            }
          },
          {
            "name": "repeatedPassword",
            "in": "body",
            "description": "User password. It is required just for the sake of validation",
            "required": true,
            "schema": {
              "$ref": "#/definitions/password"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Activate account by clicking the link that has been sent to you"
          },
          "409": {
            "description": "Email address already taken"
          },
          "502": {
            "description": "There was a problem sending the activation link"
          }
        }
      }
    },
    "/api/user/auth/activateAccount": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "  ✅ Check if user already activated his account <br />  ✅ Toggles account as activated if it's not already <br />",
        "parameters": [
          {
            "name": "activationToken",
            "in": "body",
            "description": "Account activation token. Expires in 24h",
            "required": true,
            "schema": {
              "$ref": "#/definitions/jwt"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Account activated, you can login now"
          },
          "400": {
            "description": "The activation link is invalid"
          },
          "401": {
            "description": "The activation link has expired"
          },
          "403": {
            "description": "Account already activated"
          },
          "409": {
            "description": "No authentication associated with this link"
          }
        }
      }
    },
    "/api/user/auth/resendActivationToken": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "  ✅ Ensures user with provided email address exists <br />  ✅ Rejects resending activation token if account is already activated <br />  ✅ Sends new activation token to the user <br />",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "description": "User email",
            "required": true,
            "schema": {
              "$ref": "#/definitions/email"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Link with new activation token has been sent"
          },
          "400": {
            "description": "The activation link is invalid"
          },
          "401": {
            "description": "The activation link has expired"
          },
          "403": {
            "description": "Account already activated"
          },
          "404": {
            "description": "Provided email address is invalid"
          },
          "502": {
            "description": "There was a problem sending the activation link"
          }
        }
      }
    },
